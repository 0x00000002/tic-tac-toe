{
  "name": "tic-tac-toe",
  "description": "Tic Tac Toe with React, Redux, Thunks / Sagas",
  "main": "index.js",
  "version": "1.0.0",
  "author": "Alex Tikonoff",
  "homepage": "https://tikonoff.github.io/tic-tac-toe",
  "repository": {
    "type": "git",
    "url": "git@github.com:tikonoff/tic-tac-toe.git"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@material-ui/core": "latest",
    "@material-ui/icons": "latest",
    "immer": "latest",
    "ramda": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-redux": "latest",
    "react-scripts": "latest",
    "redux": "latest",
    "redux-persist": "latest",
    "redux-saga": "latest",
    "redux-thunk": "latest"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "@babel/polyfill": "latest",
    "@babel/register": "latest",
    "enzyme": "latest",
    "enzyme-adapter-react-16": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "expect": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "nyc": "latest",
    "prettier": "latest",
    "riteway": "latest",
    "standard": "latest",
    "tap-nirvana": "latest"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint --fix . && echo 'Lint complete.'",
    "test": "react-scripts test",
    "test:all": "./.runAll",
    "coverage": "react-scripts test --coverage",
    "precommit": "CI=true npm run test && lint-staged",
    "watch": "watch 'clear && npm run test:all && npm run -s lint' src"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "expect",
      "jest",
      "test",
      "__rewire_reset_all__"
    ],
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "src/**/**.js": "git add"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run precommit"
    }
  }
}